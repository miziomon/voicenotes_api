{
  "name": "voicenotes-api",
  "version": "1.4.1",
  "description": "API per Voicenotes con AI, Supabase Proxy e Ricerca semantica",
  "main": "api/index.js",
  "scripts": {
    "dev": "node api/index.js",
    "start": "node api/index.js",
    "vercel-dev": "vercel dev",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "clean:logs": "node scripts/clean-logs.js"
  },
  "keywords": [
    "express",
    "api",
    "vercel",
    "nodejs",
    "gemini",
    "ai",
    "supabase",
    "semantic-search",
    "voicenotes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": "24.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
